# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_bot_token_here  # Telegram 봇의 인증 토큰
TELEGRAM_CHAT_ID=your_chat_id_here        # 메시지를 보낼 Telegram 채팅의 ID

# Trading Configuration
TRADING_SYMBOL=BTCUSDT                    # 거래할 자산의 심볼
TRADING_TIMEFRAME=1h                      # 거래 시간 프레임
TRADING_STRATEGY=adaptive_supertrend      # 사용할 전략의 이름
RISK_PER_TRADE=0.02                       # 거래당 위험 비율
MAX_POSITION_SIZE=1.0                     # 최대 포지션 크기
TP_SL_MODE=atr                            # Take Profit/Stop Loss 모드
SL_MULTIPLIER=2.0                         # Stop Loss 배수
TP_MULTIPLIER=3.0                         # Take Profit 배수
USE_TRAILING_STOP=false                   # 트레일링 스톱 사용 여부 (true/false)
TRAILING_STOP_ACTIVATION=0.01            # 트레일링 스톱 활성화 값
TRAILING_STOP_DISTANCE=0.005              # 트레일링 스톱 거리

# Binance API Configuration
BINANCE_API_KEY=your_binance_api_key_here  # Binance API 키
BINANCE_API_SECRET=your_binance_api_secret_here  # Binance API 비밀 키
BINANCE_TESTNET_API_KEY=your_testnet_api_key_here  # Binance 테스트넷 API 키
BINANCE_TESTNET_API_SECRET=your_testnet_api_secret_here  # Binance 테스트넷 API 비밀 키

# Environment Configuration
USE_TESTNET=true  # true로 설정하면 테스트넷 사용, false로 설정하면 실제 Binance 사용